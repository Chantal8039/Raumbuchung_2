<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="swe.fhbielefeld.raumbuchung20.MainActivity">



    <EditText
        android:id="@+id/editText_buchen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/BuchungRaumNr"/>



    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/BuchungDatumWahl"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/textView_datum"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:text="19.03.2020"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner_start"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:entries="@array/starttimes"/>

        <Spinner
            android:id="@+id/spinner_end"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:entries="@array/endtimes"/>

    </LinearLayout>

    <Button
        android:id="@+id/button_buchen"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="130dp"
        android:text="@string/buchen" />
</LinearLayout>
